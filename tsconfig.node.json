{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*", 
    "src/main/**/*", 
    "src/preload/**/*",
    "src/store/**/*.ts",
    "src/utils/**/*.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
    }
  }
}
